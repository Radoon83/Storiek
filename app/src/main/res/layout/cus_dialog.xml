<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="@color/grayToBlue"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/blueToWhite"
            android:fontFamily="@font/yagutb"
            android:gravity="center"
            android:text="منابع"
            android:textSize="30dp"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:fontFamily="@font/yagut"
            android:gravity="center"
            android:padding="5dp"
            android:text="dastanquran.blogfa.com"
            android:textColor="@color/black"
            android:textSize="17dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:fontFamily="@font/yagut"
            android:gravity="center"
            android:padding="5dp"
            android:text="yotaab.com"
            android:textColor="@color/black"
            android:textSize="17dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:fontFamily="@font/yagut"
            android:gravity="center"
            android:padding="5dp"
            android:text="topnaz.com"
            android:textColor="@color/black"
            android:textSize="17dp">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:fontFamily="@font/yagut"
            android:gravity="center"
            android:padding="5dp"
            android:text="arga-mag.com"
            android:textColor="@color/black"
            android:textSize="17dp">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:fontFamily="@font/yagut"
            android:gravity="center"
            android:padding="5dp"
            android:text="mohijon.blogfa.com"
            android:textColor="@color/black"
            android:textSize="17dp">

        </TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>