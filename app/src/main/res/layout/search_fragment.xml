<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:orientation="vertical">

    <include layout="@layout/search_background"></include>

    <EditText
        android:id="@+id/search_ed_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ed_bg"
        android:drawableEnd="@drawable/ic_search_blue"
        android:hint="جستجو کنيد ..."
        android:inputType="textShortMessage|text"
        android:maxLines="1"
        android:paddingHorizontal="15dp"
        android:textColor="@color/Subjects"
        android:textColorHint="@color/Subjects">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_ed_id"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>